<script>
const data = JSON.parse(localStorage.getItem("projectSelections")) || [];

const summaryContainer = document.getElementById("summary");
let total = 0;

const pricing = {
  "Increase Brand Authority": 500,
  "Launch a New Product": 700,
  "Build Digital Presence": 400,
  "Interactive Web": 1000,
  "3D Environment": 2000,
  "AI-Driven Experience": 3000
};

data.forEach(item => {
  const p = document.createElement("p");
  p.textContent = item;
  summaryContainer.appendChild(p);

  if (pricing[item]) {
    total += pricing[item];
  }
});

document.getElementById("totalPrice").textContent = "Estimated Investment: $" + total + " USD";
</script>

